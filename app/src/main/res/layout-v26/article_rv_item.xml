<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/text_new"
                android:background="@drawable/textview_border"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="14dp"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_title"
                app:layout_constraintLeft_toRightOf="@id/text_new"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                app:layout_goneMarginStart="10dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                tools:text="2222222"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/heart"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_author"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/text_sort"
                app:layout_constraintTop_toBottomOf="@id/text_title"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="1dp"
                android:textSize="12sp"
                android:text="@string/author"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_sort"
                app:layout_constraintStart_toEndOf="@id/text_author"
                app:layout_constraintEnd_toStartOf="@id/text_time"
                app:layout_constraintBaseline_toBaselineOf="@id/text_author"
                android:layout_marginEnd="1dp"
                android:textSize="12sp"
                android:text="@string/sort"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_time"
                app:layout_constraintStart_toEndOf="@id/text_sort"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/text_author"
                android:layout_marginEnd="1dp"
                android:textSize="12sp"
                android:text="@string/time"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>